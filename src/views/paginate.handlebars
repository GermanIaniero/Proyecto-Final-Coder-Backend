<section class="homestaticbanner" style="margin-top:px;" data-nv-seq="0">
    <div class="cols" style="padding-top: 50px;">

    </div>

    <div class="left-col">
        <div class="thumbs">

        </div>


        <div class="wrapper fadeInDown">
            <div id="formContent">
                <form action="#">
                    <br>
                    <br>
                    <div>
                        <div class="contain_form_paginate">
                            <form id="form-paginate">
                                <label for="page">Página:</label>
                                <input id="page" type="number" min="0" />

                                <label for="limit">Limite:</label>
                                <input id="limit" type="number" min="0" />

                                <button class="btn2" type="submit">Ir</button>
                            </form>
                        </div>

                </form>


            </div>
        </div>

        <figure class="snip1249">
            {{#each docs}}
            <div class="image">
                <img src="{{this.thumbnail}}" alt="muestra" /><i
                    class="ion-ios-basketball-outline"></i>
            </div>
            <figcaption>
                <h3>Title: {{this.title}} </h3>
                <p>Detalle</p>
                <div class="price">
                    {{this.price}}
                </div>
                <a href="#" onclick="addProductCart('{{this._id}}')" class="add-to-cart">Add to Cart</a>
            </figcaption>
            {{/each}}
        </figure>

    </div>

<div class="container">
    {{#if hasPrevPage}}
    <a href="{{prevLink}}">Anterior</a>
    {{/if}}

    {{#if hasNextPage}}
    <a href="{{nextLink}}">Siguiente</a>
    {{/if}}
</div>

<script src="/static/js/paginate.js"></script>


</section>




































